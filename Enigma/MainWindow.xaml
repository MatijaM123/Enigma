                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FFDEDEDE" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <GroupBox x:Name ="gbx_podesavanja" Header="Podešavanja" Margin="10,23,466,595" RenderTransformOrigin="0.498,0.511">
